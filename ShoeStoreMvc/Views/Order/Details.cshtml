@model ShoeStoreMvc.Models.Order

<div class="container my-5">
    <h2 class="text-center mb-4">Chi tiết đơn hàng</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Mã đơn hàng: @Model.Id</h5>
            <p class="card-text"><strong>Ngày đặt:</strong> @Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
            <p class="card-text"><strong>Trạng thái:</strong> @Model.Status</p>

            <h5 class="mt-3">Danh sách sản phẩm:</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Sản phẩm</th>
                        <th>Kích thước</th>
                        <th>Màu sắc</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Tổng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                       var sum = item.Quantity * item.Price;

                        <tr>
                            <td><img src="@item.ImageUrl" alt="@item.ProductName" width="60" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Size</td>
                            <td>@item.Color</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("N0") đ</td>
                          
                            <td>@sum.ToString("N0") đ</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h4 class="text-right">Tổng tiền: @Model.TotalAmount.ToString("N0") đ</h4>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tiếp tục mua sắm</a>
    </div>
</div>
