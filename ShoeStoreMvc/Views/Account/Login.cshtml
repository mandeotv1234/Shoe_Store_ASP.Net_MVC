@model ShoeStoreMvc.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Welcome to our shoe store!</h3>
                    <p class="text-center mb-4">We're excited to have you here. Explore our latest collection and find the perfect pair that suits your style and comfort.</p>

                    <form method="post">
                        @if (ViewData.ModelState.IsValid)
                        {
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required />
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="keepMeLoggedIn" />
                                <label class="form-check-label" for="keepMeLoggedIn">Keep me logged in</label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mt-3">Log In</button>
                        }
                    </form>

                    <div class="text-center mt-3">
                        <p>Forgot Password? <a href="#">Click here</a></p>

                        <!-- Login with Google -->
                        <form method="get" action="/Account/LoginWithGoogle">
                            <button type="submit" class="btn btn-danger w-100 mt-3">Login with Google</button>
                        </form>

                        <!-- Login with Facebook -->
                        <form method="get" action="/Account/LoginWithFacebook">
                            <button type="submit" class="btn btn-primary w-100 mt-2">Login with Facebook</button>
                        </form>

                        <!-- Link to register page -->
                        <p class="mt-3">Don't have an account? <a href="/Account/Register" class="btn btn-link">Create an Account</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
