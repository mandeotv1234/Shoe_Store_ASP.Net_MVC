@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoeStore</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">Dmillav</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Product/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Chat">Chat</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Hiển thị khi người dùng đã đăng nhập -->
                            <li class="nav-item">
                                <a class="nav-link" href="/Cart">
                                    <img src="https://img.icons8.com/material/24/000000/shopping-cart.png" alt="Cart" />
                                    
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Logout">Logout</a>
                            </li>
                             <li class="nav-item">
                               @User.Identity.Name
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Profile">
                                    <!-- Hiển thị Avatar và Username của người dùng -->
                                    <img src="@Context.Session.GetString("UserAvatar")" alt="User Avatar" class="rounded-circle" style="width: 30px; height: 30px; margin-right: 5px;" />
                                  
                                    
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Hiển thị khi người dùng chưa đăng nhập -->
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">Login</a>
                            </li>
                        }

                        


                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="container">
        @RenderBody()  <!-- Đây là nơi nội dung từng trang sẽ được chèn vào -->
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="container p-4">
            <p>© 2025 Dmillav. All Rights Reserved.</p>
            <p><a href="/Privacy">Privacy Policy</a> | <a href="/Terms">Terms of Service</a></p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
